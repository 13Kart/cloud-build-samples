// [START build_python_json]

{
  // [START build_python_dependencies_json]
  "steps": [
  {
    "name": "python",
    "entrypoint": "pip",
    "args": [
      "install",
      "-r",
      "requirements.txt",
      "--user"
    ]
  },
  // [END build_python_dependencies_json]

  // [START build_python_tests_json]
  {
    "name": "python",
    "entrypoint": "python",
    "args": [
      "-m",
      "pytest",
      "--junitxml=${SHORT_SHA}_test_log.xml"
    ]
  },
  // [END build_python_tests_json]

  // [START build_python_image_json]
  {
    "name": "gcr.io/cloud-builders/docker",
    "args": [
      "build",
      "-t",
      "us-central1-docker.pkg.dev/$PROJECT_ID/$_REPO_NAME/myimage:$SHORT_SHA",
      "."
    ]
  },
  // [END build_python_image_json]

  // [START build_python_push_json]
  {
    "name": "gcr.io/cloud-builders/docker",
    "args": [
      "push",
      "us-central1-docker.pkg.dev/$PROJECT_ID/$_REPO_NAME/myimage:$SHORT_SHA"
    ]
  },
  // [END build_python_push_json]
  
  // [START build_python_deploy_json]
  {
    "name": "google/cloud-sdk",
    "args": [
      "gcloud",
      "run",
      "deploy",
      "helloworld",
      "--image=us-central1-docker.pkg.dev/$PROJECT_ID/$_REPO_NAME/myimage:$SHORT_SHA",
      "--region",
      "us-central1",
      "--platform",
      "managed",
      "--allow-unauthenticated"
    ]
  }
  // [END build_python_deploy_json]
],
// [START build_python_logs_json]
"artifacts": {
  "objects": {
    "location": "gs://$_BUCKET_NAME/",
    "paths": [
      "${SHORT_SHA}_test_log.xml"
    ]
  }
},
// [END build_python_logs_json]
"images": [
  "us-central1-docker.pkg.dev/$PROJECT_ID/$_REPO_NAME/myimage:$SHORT_SHA"
]
}
// [END build_python_json]
